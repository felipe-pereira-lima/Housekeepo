<div class = "d-flex flex-column justify-content-center align-items-center">
<h1>Welcome {{username}}</h1>

<button type="button" class="boxhead btn btn-dark rounded-lg">
  <ion-icon name="add-circle-outline" size="medium"></ion-icon>  
  <a href="/home/create">Add Home</a>
</button>

<hr>
{{#each homes}}

<div class="card d-flex flex-column justify-content-center align-items-center rounded-lg" style="width:50%">
  <div class="card-body d-flex flex-column justify-content-center align-items-center">
     <a class="btna2" href="/home/{{_id}}"><h6 class="card-title"><ion-icon name="navigate-circle-outline"></ion-icon> {{name}}</h6></a>

    {{#if pictures}}
      <a href="/home/{{_id}}"><img class="rounded-lg" src="{{pictures}}", alt="{{name}}"></a>
    {{/if}}
    </div>
    <div = class="d-flex flex-row justify-content-center align-items-center">
      <a class="btna2" href="/home/{{_id}}"><ion-icon href="/home/{{_id}}" name="document-text-outline" size="large" ></ion-icon></a>
      <a class="btna2" href="/home/{{_id}}/edit"><ion-icon name="construct-outline" size="large"></ion-icon></a>
    </div>
  </div>
</div>
<hr>
{{/each}}
</div>


